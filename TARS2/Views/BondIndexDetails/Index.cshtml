@model IEnumerable<TARS2.DBModel.BondIndexDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Bond Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index","BondIndexDetails"))
{
         
    <p> Bond Indices: @Html.DropDownList("BondIndex", "--Select a Index--")   Value Start Date: @Html.TextBox("ValueStartDate", String.Format("{0:d}",DateTime.Today.ToShortDateString())) Value End Date: @Html.TextBox("ValueEndDate", String.Format("{0:d}", DateTime.Today.ToShortDateString()))

    
      
    <input type ="submit" value ="Filter" /><br />   </p>
}

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BondIndex.BondIndexName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreviousValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValueChange)
        </th>        
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BondIndex.BondIndexName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreviousValue)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ValueChange)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.BondIndexDetailID}) |
            @Html.ActionLink("Details", "Details", new { id = item.BondIndexDetailID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BondIndexDetailID })
        </td>
    </tr>
}

</table>
<ul class="pagination pagination-lg pager" id="myPager"></ul>
<div Class="error">@ViewData["NoRecords"]  </div>  